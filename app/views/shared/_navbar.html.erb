<% if controller.controller_name == "pages" && controller.action_name == "home" %>
  <div class="navbar navbar-expand-sm navbar-lewagon navbar-fixed-top transparent">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "terrace_white.png" %>
      <% end %>
  </div>
<% else %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-fixed-top">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "terrace_turquoise.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "See all rooftops", rooftops_path, class: "btn btn-flat mr-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "Rent a rooftop", new_rooftop_path, class: "btn btn-ghost mr-3" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My Dashboard", "#", class: "dropdown-item" %>
              <%#= link_to "See all rooftops", rooftops_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
